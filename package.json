{
  "name": "locize-server",
  "version": "0.0.1",
  "description": "Node server to use with locize",
  "main": "index.ts",
  "author": "@rigoch",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "fastify": "^3.18.1"
  },
  "devDependencies": {
    "@types/node": "^16.0.0",
    "tap": "^15.0.9",
    "ts-node-dev": "^1.1.8",
    "tsc": "^2.0.3",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "test": "tap --reporter=list --ts --watch --no-timeout",
    "dev": "export TARGET_ENV=staging && ts-node-dev src/index.ts",
    "dev-prod": "export TARGET_ENV=production && ts-node-dev src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node index.js"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules/**/node_modules",
      "./src/**.js",
      "./src/**.test.ts"
    ]
  }
}
